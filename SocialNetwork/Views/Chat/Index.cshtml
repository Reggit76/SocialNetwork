@model IEnumerable<SocialNetwork.Models.ViewModels.ChatViewModel>

@{
    ViewData["Title"] = "Chat";
}
@Html.Partial("_Header")
<div class="main-content">
    <h2>Chats</h2>
    <a href="/Chat/Create" class="btn btn-primary">Create New Chat</a>
    <div class="chat-list">
        @foreach (var chat in Model)
        {
            <div class="chat-item">
                <h3>@chat.Name</h3>
                <p>@chat.Description</p>
                <a href="/Chat/Details/@chat.Id" class="btn btn-info">Open Chat</a>
            </div>
        }
    </div>
</div>
@Html.Partial("_Footer")
