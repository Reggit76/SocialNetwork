@model SocialNetwork.Models.DTO.ChatDTO

@{
    ViewData["Title"] = "Chat Details";
}
@Html.Partial("_Header")
<div class="main-content">
    <h2>@Model.Name</h2>
    <p>@Model.Description</p>
    <div class="participants">
        <h3>Participants</h3>
        <ul>
            @foreach (var participant in Model.Participants)
            {
                <li>@participant.FullName (@participant.Username)</li>
            }
        </ul>
    </div>
    <div class="messages">
        <h3>Messages</h3>
        @foreach (var message in Model.Messages)
        {
            <div class="message">
                <p><strong>@message.SenderId:</strong> @message.Content</p>
                <p><small>@message.Timestamp.ToString("g")</small></p>
            </div>
        }
    </div>
    <form asp-action="SendMessage" method="post">
        <div class="form-group">
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <label for="content">New Message</label>
            <input id="content" name="content" class="form-control" />
            <button type="submit" class="btn btn-primary">Send</button>
        </div>
    </form>
</div>
@Html.Partial("_Footer")
