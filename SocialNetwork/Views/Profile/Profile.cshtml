@model SocialNetwork.Models.ViewModels.UserProfileViewModel

@{
    ViewData["Title"] = "Profile";
}
@Html.Partial("_Header")
<div class="profile-container">
    <div class="profile-avatar-container">
        <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="profile-avatar" />
        <h1>@Model.FullName</h1>
        <p>@Model.Description</p> 
    </div>
    <div class="profile-details">
        <h2>@Model.Username</h2> 
        <p>Email: @Model.Email</p>
        <p>Gender: @Model.Gender</p>
        <p>Date of Birth: @Model.DateOfBirth.ToShortDateString()</p>
        <h3>Posts</h3>
        @foreach (var post in Model.Posts)
        {
            <div class="post">
                <p>@post.Content</p>
                @if (!string.IsNullOrEmpty(post.ImageUrl))
                {
                    <img src="@post.ImageUrl" alt="Post Image" />
                }
            </div>
        }
    </div>
</div>
@Html.Partial("_Footer")
